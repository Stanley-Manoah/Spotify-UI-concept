<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="atomsandbots.android.spotifyvideos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_ic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_ic"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpotifyVideos">
        <activity android:name=".ui.SplashActivity" />
        <activity android:name=".ui.VideoActivity" />
        <activity android:name=".registration.RegisterActivity" />
        <activity android:name=".ui.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>